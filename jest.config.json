{
  "collectCoverage": true,
  "collectCoverageFrom": ["src/**/*.{ts,tsx}", "!src/**/*.d.ts"],
  "testMatch": ["<rootDir>/src/**/*.test.{ts,tsx}"],
  "rootDir": "./",
  "transform": {
    "^.+\\.tsx?$": "babel-jest"
  },
  "setupFilesAfterEnv": ["@testing-library/jest-dom/extend-expect"],
  "testEnvironment": "jsdom",
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  }
}
